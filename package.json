    "private": true,
    "type": "module",
    "scripts": {
        "build:install": "cd client && yarn install --network-timeout 600000 && cd .. && yarn install --network-timeout 600000 && npx prisma generate",
        "build:compile": "cd client && yarn build && cd .. && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
        "build": "cd client && yarn build && cd ..",
        "runtime:install": "yarn install --prod --frozen-lockfile",
        "start": "node --env-file=.env built/main.js",
        "docker:start": "npx prisma migrate deploy && node built/main.js",
        "ci:lint": "eslint && cd client && eslint"
    },
    "devDependencies": {
        "@types/node": "^22.4.1",
